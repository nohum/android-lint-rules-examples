<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/start_failing_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_failing_receiver"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/start_working_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_succeeding_receiver"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/start_navigation_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_navigation_activity"
        android:layout_marginBottom="10dp" />

</LinearLayout>
